{
  "name": "docflow-lite",
  "version": "1.0.0",
  "description": "Automated documentation platform for startups",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../docs-generator && npm install",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start"
  },
  "keywords": ["documentation", "automation", "mintlify", "ai", "onboarding"],
  "author": "Your Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend", 
    "docs-generator",
    "shared"
  ]
}
