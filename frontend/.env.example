# DocFlow Lite Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URL (default: http://localhost:3001)
NEXT_PUBLIC_API_URL=http://localhost:3001

# API timeout in milliseconds (default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable debug logging (default: false)
NEXT_PUBLIC_DEBUG=false

# Node environment (automatically set by Next.js)
# NODE_ENV=development

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Analytics tracking ID (if using analytics)
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Sentry DSN for error tracking (if using Sentry)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# For production deployment, set:
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG=false